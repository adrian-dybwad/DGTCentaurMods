[Unit]
Description=DGTCentaurMods software.
After=network.target

[Service]
Environment=PYTHONUNBUFFERED=1
Environment=DGTCM_PATH=/opt
ExecStartPre=/bin/sleep 4
ExecStart=/opt/DGTCentaurMods/.venv/bin/python -m DGTCentaurMods.universal
WorkingDirectory=/opt
StandardOutput=file:/var/log/modmenuoutput.log
StandardError=file:/var/log/modmenuoutput.log
Restart=on-failure
RestartSec=3
User=pi

[Install]
WantedBy=multi-user.target
